# Common Environment Variables
PUID=1000
PGID=1000
TZ=Asia/Ho_Chi_Minh

# Docker Network
HOMELAB_NETWORK=docker_homelab

# Base Directory for Volumes
DOCKER_CONFIG_BASE=/mnt/docker
DATA_STORAGE_BASE=/mnt/data

# -----------------------------------------------------------
# Service Specific Variables
# -----------------------------------------------------------

# 1. Immich
IMMICH_VERSION=release
UPLOAD_LOCATION=${DATA_STORAGE_BASE}/immich/upload
DB_DATA_LOCATION=${DOCKER_CONFIG_BASE}/immich/database
DB_USERNAME=immich
DB_PASSWORD=your_immich_postgres_password_here
DB_DATABASE_NAME=immich
REDIS_HOSTNAME=immich_redis

# 2. Homepage
HOMEPAGE_HOST_PORT=8080

# 3. Filebrowser
FILEBROWSER_HOST_PORT=8088

# 4. Jellyfin
